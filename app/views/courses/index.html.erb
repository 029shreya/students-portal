
<h1 class="mt-3 mb-4">Courses</h1>
<%= link_to "New Course", new_course_path, class: "btn btn-primary mt-3" %>


<div id="courses">
  <% @courses.each do |course| %>  
    <%= render course %>
        <p>
      <%= link_to "Show this course", course, class: "btn btn-info btn-sm" %>
    </p>
    <hr class="my-4">
  <% end %>
</div>
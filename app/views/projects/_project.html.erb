<div id="<%= dom_id project %>" class="card mb-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title"><%= project.name.capitalize %></h5>
    <p class="card-text"><%= project.description %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Back to projects", projects_path, class: "btn btn-sm btn-outline-secondary" %>
      </div>
      <%= button_to "Destroy", project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>

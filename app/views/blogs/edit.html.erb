<!-- app/views/blogs/edit.html.erb -->

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Edit Blog Entry</h5>

    <%= form_with model: @blog, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the blog title" %>
      </div>

      <div class="mb-3">
        <%= form.label :body, class: "form-label" %>
        <%= form.text_area :body, class: "form-control", rows: 5, placeholder: "Enter the blog body" %>
      </div>

      <div class="text-center">
        <%= form.submit "Update Blog", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

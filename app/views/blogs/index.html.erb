<!-- app/views/blogs/index.html.erb -->

<div class="container">
  <h1 class="mt-5">Blogs</h1>
  <%= link_to 'New Blog', new_blog_path, class: "btn btn-success mb-3" %>

  <% @blogs.each do |blog| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= blog.title %></h5>
        <p class="card-text"><%= truncate(blog.body, length: 100) %></p>
        
        <div class="d-flex justify-content-between">
          <%= link_to 'Show', blog_path(blog), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-secondary" %>
          <%= button_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

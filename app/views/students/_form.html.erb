<div class="card">
  <div class="card-body">
    <%= form_with model: @student do |form| %>
      <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |message| %>
          <p class="text-danger">
            <%= message %>
          </p>
        <% end %>
      <% end %>

      <div class="mb-3">
        <%= form.label :First_name, class: "form-label" %><br>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :last_name, class: "form-label" %><br>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :Age, class: "form-label" %><br>
        <%= form.text_field :age, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :Email, class: "form-label" %><br>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :Contact_number, class: "form-label" %><br>
        <%= form.text_field :contact_number, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :Profile_image, class: "form-label" %><br>
        <%= form.file_field :profile_image, class: "form-control" %>
      </div>
      <h2>Assign Courses</h2>
  <%= form.collection_check_boxes :course_ids, @courses, :id, :title %>

      <div class="text-center">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">

  <h1 class="text-center mb-4">Students Details</h1>

  <%= link_to 'New Student', new_student_path(@student), class: "btn btn-primary mb-3" %>

 

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>S.No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Contact</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each_with_index do |student, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= student.name.capitalize %></td>
          <td><%= student.last_name.capitalize %></td>
          <td><%= student.age %></td>
          <td><%= student.email %></td>
          <td><%= student.contact_number %></td>
          <td><%= link_to 'View', student, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning btn-sm" %></td>
          <td>
            <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @students %>
</div>
